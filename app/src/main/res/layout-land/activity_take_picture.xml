<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jonas.examproject.TakePictureActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PictureNote_Title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:hint="Title"
        android:inputType="textShortMessage|textAutoCorrect|textCapSentences"
        android:background="#00000000"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewPictureNote"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/buttonSavePicture"
        android:layout_below="@+id/PictureNote_Title"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/buttonSavePicture"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:shadowColor="@android:color/holo_green_dark"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>